extends ../layout_responsive
block variables
    - var headIconRight = 'glyphicon glyphicon-ok'
    - var headIconLeft = 'glyphicon glyphicon-chevron-left'
    - var rightIconLink = 'new'
    - var leftIconLink = 'list'
    - var hiddenTitle = 'Pages'

block content
    div.container-fluid
        div.row
            div.col-sm-4.hidden-xs
                div.container-fluid
                    div.list-group
                        div.list-group-item
                            a(href='../widget/list') Here's a page!
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../widget/list') We'll fill this from Mongo later
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../widget/list') About Me
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../widget/list') About You
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../widget/list') About that guy over there
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../widget/list') About that girl you secretly have a crush on
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
            div.col-sm-8
                div.container-fluid
                    form
                        div Name
                        input.form-control(id='pageName',type='text', placeholder='Page Name' ,name='pageName')
                        div Title
                        textarea.form-control(id='pageTitle',type='pageTitle',placeholder='Page Title', name='pageTitle')
     

