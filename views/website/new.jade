extends ../layout_bluesticky_responsive
block variables
    - var headIconRight = 'glyphicon glyphicon-ok'
    - var headIconLeft = 'glyphicon glyphicon-chevron-left'
    - var rightIconLink = 'list'
    - var leftIconLink = 'list'
    - var hiddenTitle = 'Websites'
block content
    div.container-fluid
        div.row
            div.col-sm-4.hidden-xs
                div.container-fluid
                    div.list-group
                        div.list-group-item
                            a(href='../pages/list') Placeholder App
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../pages/list') We'll fill this from Mongo later
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../pages/list') ithinkincomics.wordpress.com
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../pages/list') My Blog
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../pages/list') Delicious Food App
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
                        div.list-group-item
                            a(href='../pages/list') Dog Pics App
                            a.glyphicon.glyphicon-cog.pull-right(href='edit')
            div.col-sm-8
                div.container-fluid
                    form
                        label(for='websiteName') Name
                        input(id='websiteName',type='text' ,name='websiteName',class="form-control")
                        label(for='description') Description
                        textarea(id='description',type='description', name='description',class="form-control")


