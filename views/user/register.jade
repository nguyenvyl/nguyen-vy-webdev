extends ../layout_nosticky

block content
    h1 Register
    form
        input.form-control(id='username',type='text', placeholder='username',name='username')
        input.form-control(id='password',type='password', placeholder='password',name='password')
        input.form-control(id='verifypw',type='verifypw', placeholder='verify password',name='verifypw')
        a.btn.btn-primary.btn-block(href='profile', type='button') Register
        a.btn.btn-danger.btn-block(href='login', type='button') Cancel
